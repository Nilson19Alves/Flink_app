<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarStyle="insideInset"
    tools:ignore="ScrollViewCount">

    <GridLayout
        android:padding="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="left"
            android:id="@+id/btn_faq"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:contentDescription="@string/img_help"
            android:src="@drawable/icon_help"/>

        <ImageView
            android:layout_marginLeft="25dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/img_barra_superior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:src="@drawable/icon_barra_superior"/>

        <ImageButton
            android:background="@color/SilverWhite"
            android:layout_gravity="right"
            android:id="@+id/btn_code"
            android:contentDescription="@string/img_qr_code"
            android:layout_width="60dp"
            android:layout_height="50dp"
            style="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            android:src="@drawable/icons_qr_40"/>

    </GridLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/title_home_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/home_title"
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/Black"
        android:textStyle="bold" />

    <TextView
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/home_sub_title"
        android:textColor="@color/Black"
        android:textSize="14sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_supermer"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>