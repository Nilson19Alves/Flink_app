<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="20dp"
    android:elevation="20dp"
    app:cardCornerRadius="10dp"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:padding="2dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:contentDescription="@string/app_name"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="top"
            style="@style/TextAppearance.AppCompat.Large.Inverse"/>

    </LinearLayout>

    <LinearLayout
        android:padding="2dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:textColor="@color/BlueViolet"
            android:layout_gravity="left"
            android:textStyle="bold"/>

        <GridLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_half_black_18"/>

            <TextView
                android:gravity="center"
                android:id="@+id/classifica_card"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/montserrat"
                android:textSize="14sp"
                android:textColor="@color/BlueViolet"
                android:textStyle="bold"/>

            <Space
                android:layout_width="80dp"
                android:layout_height="40dp"/>

            <LinearLayout
                android:padding="2dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/distancia_card"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:fontFamily="@font/montserrat"
                    android:textSize="14sp"
                    android:textColor="@color/BlueViolet"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/home_card_distancia"
                    android:textSize="12sp"
                    android:textStyle="normal"/>

            </LinearLayout>

        </GridLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="100dp"
        android:background="@color/Silver"/>

    <LinearLayout
        android:padding="2dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="2dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf">

            <TextView
                android:gravity="center"
                android:id="@+id/status_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/home_card_status"
                android:textSize="16sp"
                android:textColor="@color/BlueViolet"
                android:textStyle="bold"/>

            <TextView
                android:gravity="center"
                android:id="@+id/endereco_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/home_card_endereco"
                android:textSize="12sp"
                android:textStyle="normal"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/localiza_mercado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/baseline_map_black_24"
                android:contentDescription="@string/home_card_img" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>