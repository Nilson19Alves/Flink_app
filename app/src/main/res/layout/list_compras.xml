<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="5dp"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/add_item"
        android:contentDescription="@string/lista_icon_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:src="@drawable/baseline_add_circle_outline_black_24"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/nome_item"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/montserrat"
        android:textSize="16sp"
        android:textColor="@color/Black"/>

    <ImageButton
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:background="@drawable/select_buttom"
        android:contentDescription="@string/lista_icon_help" />

</LinearLayout>