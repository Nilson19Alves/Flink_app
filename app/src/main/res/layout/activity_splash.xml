<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/icon_fundo_splash"
    android:orientation="vertical"
    tools:context=".Flink_Splash">

    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/imageView"
        android:layout_width="242dp"
        android:layout_height="236dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/icon_logo_vertical"/>

    <ImageView
        android:id="@+id/experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/home_card_img"
        android:src="@drawable/icon_title_splach"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_verificRede"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verificando Rede..."
        android:textColor="@color/colorPrimary"
        />

    <ProgressBar
        android:id="@+id/progress_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>